<Window x:Class="GcodeAnalyzer.ZValueEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Z-Value Parameter Editor" Height="750" Width="600" MinHeight="450" MinWidth="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#FF1E1E1E"
        ShowInTaskbar="False"
        Topmost="False">
    
    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FF1E1E1E"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FF2D2D30"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#FF3F3F46"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#FFE0E0E0"/>
        <SolidColorBrush x:Key="ForegroundDimBrush" Color="#FF9E9E9E"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF007ACC"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#FF4CAF50"/>
        
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="CaretBrush" Value="White"/>
        </Style>
        
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
        </Style>
        
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header Info -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                Padding="12" Margin="0,0,0,15" CornerRadius="4">
            <StackPanel>
                <TextBlock Text="Select and modify parameters for all lines with a specific Z value" 
                           Foreground="{StaticResource ForegroundBrush}"
                           FontSize="13" TextWrapping="Wrap" Margin="0,0,0,5"/>
                <TextBlock x:Name="TxtScope" Text="Scope: Entire document" 
                           Foreground="{StaticResource ForegroundDimBrush}"
                           FontSize="12" FontStyle="Italic"/>
            </StackPanel>
        </Border>
        
        <!-- Find Z Value -->
        <GroupBox Grid.Row="1" Header="1. Find Lines with Z Value" Padding="12" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Label Content="Z Value:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="TxtZValue" Grid.Column="1" FontSize="14" 
                             ToolTip="Enter Z value (e.g., -5.0), range (e.g., -3.2 to -5.1), or leave blank for all lines"
                             TextChanged="TxtZValue_TextChanged"/>
                    <Button x:Name="BtnFind" Content="?? Find" Grid.Column="2" 
                            Click="BtnFind_Click" Margin="10,0,0,0"
                            ToolTip="Find all lines with this Z value or range"/>
                </Grid>
                
                <TextBlock Grid.Row="1" 
                           Text="Examples: -5.0 (single value) | -3.2 to -5.1 (range) | Leave blank for all lines"
                           Foreground="{StaticResource ForegroundDimBrush}"
                           FontSize="11" FontStyle="Italic"
                           Margin="0,0,0,10"/>
                
                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <TextBlock x:Name="TxtMatchCount" Text="No matches found" 
                               Foreground="{StaticResource ForegroundDimBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- Modification Options -->
        <GroupBox Grid.Row="2" Header="2. Choose Parameter to Modify" Padding="12" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Column -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Position/Speed:" FontWeight="SemiBold" 
                               Foreground="{StaticResource ForegroundDimBrush}"
                               Margin="0,0,0,5"/>
                    <RadioButton x:Name="RbModifyZ" Content="Modify Z value" 
                                 IsChecked="True" Margin="0,5"
                                 Checked="ModificationOption_Changed"/>
                    <RadioButton x:Name="RbModifyX" Content="Modify X value" 
                                 Margin="0,5"
                                 Checked="ModificationOption_Changed"/>
                    <RadioButton x:Name="RbModifyY" Content="Modify Y value" 
                                 Margin="0,5"
                                 Checked="ModificationOption_Changed"/>
                    <RadioButton x:Name="RbModifyF" Content="Modify feed rate (F)" 
                                 Margin="0,5"
                                 Checked="ModificationOption_Changed"/>
                    <RadioButton x:Name="RbModifyS" Content="Modify spindle speed (S)" 
                                 Margin="0,5"
                                 Checked="ModificationOption_Changed"/>
                    <RadioButton x:Name="RbModifyP" Content="Modify dwell time (P)" 
                                 Margin="0,5"
                                 Checked="ModificationOption_Changed"/>
                </StackPanel>
                
                <!-- Right Column -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock Text="Tool/Rates/Other:" FontWeight="SemiBold" 
                               Foreground="{StaticResource ForegroundDimBrush}"
                               Margin="0,0,0,5"/>
                    <RadioButton x:Name="RbModifyT" Content="Modify tool number (T)" 
                                 Margin="0,5"
                                 Checked="ModificationOption_Changed"/>
                    <RadioButton x:Name="RbModifyM" Content="Modify M-code" 
                                 Margin="0,5"
                                 Checked="ModificationOption_Changed"/>
                    <RadioButton x:Name="RbModifyE" Content="Modify extrusion rate (E)" 
                                 Margin="0,5"
                                 Checked="ModificationOption_Changed"/>
                    <RadioButton x:Name="RbModifyA" Content="Modify A-axis rotation" 
                                 Margin="0,5"
                                 Checked="ModificationOption_Changed"/>
                    <RadioButton x:Name="RbModifyB" Content="Modify B-axis rotation" 
                                 Margin="0,5"
                                 Checked="ModificationOption_Changed"/>
                    <RadioButton x:Name="RbModifyQ" Content="Modify peck depth (Q)" 
                                 Margin="0,5"
                                 Checked="ModificationOption_Changed"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- New Value -->
        <GroupBox Grid.Row="3" Header="3. Enter New Value" Padding="12" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Label x:Name="LblNewValue" Content="New Z Value:" Grid.Column="0" 
                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="TxtNewValue" Grid.Column="1" FontSize="14"
                             ToolTip="Enter the new value to replace in matching lines"/>
                </Grid>
                
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                    <RadioButton x:Name="RbSetAbsolute" Content="Set to absolute value" 
                                 IsChecked="True" Margin="0,0,20,0"
                                 Foreground="{StaticResource ForegroundBrush}"
                                 ToolTip="Replace with exact value (e.g., 10 sets parameter to 10)"/>
                    <RadioButton x:Name="RbAddOffset" Content="Add offset (relative)" 
                                 Margin="0,0,20,0"
                                 Foreground="{StaticResource ForegroundBrush}"
                                 ToolTip="Add value to existing (e.g., +2 adds 2 to current value)"/>
                    <RadioButton x:Name="RbSubtractOffset" Content="Subtract offset" 
                                 Foreground="{StaticResource ForegroundBrush}"
                                 ToolTip="Subtract value from existing (e.g., 2 subtracts 2 from current value)"/>
                </StackPanel>
                
                <CheckBox x:Name="ChkAddIfMissing" Grid.Row="2" 
                          Content="Add parameter if it doesn't exist in the line"
                          Margin="0,10,0,0" IsChecked="False"
                          ToolTip="If enabled, adds the parameter to lines that don't have it"/>
            </Grid>
        </GroupBox>
        
        <!-- Action Buttons -->
        <Grid Grid.Row="4" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button x:Name="BtnPreview" Content="?? Preview" Grid.Column="0"
                    Click="BtnPreview_Click" 
                    ToolTip="Preview the changes before applying"
                    Background="#FFFF9800" Margin="0,0,5,0"/>
            <Button x:Name="BtnUnitConverter" Content="?? Unit Converter" Grid.Column="1"
                    Click="BtnUnitConverter_Click" 
                    ToolTip="Convert inches to millimeters"
                    Background="#FF9C27B0" Margin="0,0,5,0"/>
            <Button x:Name="BtnApply" Content="? Apply Changes" Grid.Column="3" 
                    Click="BtnApply_Click" Margin="0,0,5,0"
                    Background="{StaticResource SuccessBrush}"
                    ToolTip="Apply the modifications to the selected lines"/>
            <Button x:Name="BtnClose" Content="Close" Grid.Column="4" 
                    Click="BtnClose_Click" Background="#FF607D8B"/>
        </Grid>
        
        <!-- Preview/Status Area -->
        <Border Grid.Row="5" Background="{StaticResource SurfaceBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                Padding="10" CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="TxtPreview" 
                           Foreground="{StaticResource ForegroundDimBrush}"
                           TextWrapping="Wrap"
                           FontFamily="Consolas"
                           FontSize="12"
                           Text="Enter a Z value and click Find to locate matching lines"/>
            </ScrollViewer>
        </Border>
    </Grid>
    
    <!-- Keyboard shortcuts -->
    <Window.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CloseCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
        <KeyBinding Key="F" Modifiers="Ctrl" Command="{Binding FindCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
    </Window.InputBindings>
</Window>

































































































