<Window x:Class="GcodeAnalyzer.MacroEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="G-code Macro Editor" Height="600" Width="800" MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterOwner"
        Background="#FF1E1E1E">
    
    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FF1E1E1E"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FF2D2D30"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#FF3F3F46"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#FFE0E0E0"/>
        <SolidColorBrush x:Key="ForegroundDimBrush" Color="#FF9E9E9E"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF007ACC"/>
        <SolidColorBrush x:Key="HeaderBrush" Color="#FF00D4FF"/>
        
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1C97EA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#40000000" Padding="15">
            <StackPanel>
                <TextBlock Text="G-code Macro Editor" 
                           FontSize="28" FontWeight="Bold" 
                           Foreground="{StaticResource HeaderBrush}"/>
                <TextBlock Text="Define keyboard shortcuts (Ctrl+1 through Ctrl+0) to quickly insert G-code snippets" 
                           FontSize="14" Foreground="{StaticResource ForegroundDimBrush}" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Macro List -->
        <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" Padding="15,10"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1">
            <TextBlock Text="Select a macro to edit:" 
                       Foreground="{StaticResource ForegroundBrush}" 
                       FontWeight="SemiBold"/>
        </Border>
        
        <Grid Grid.Row="2" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Macro List -->
            <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                    CornerRadius="5" Padding="0" Margin="0,0,10,0">
                <ListBox x:Name="MacroListBox" 
                         Background="Transparent"
                         Foreground="{StaticResource ForegroundBrush}"
                         BorderThickness="0"
                         SelectionChanged="MacroListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock FontWeight="Bold" Foreground="{StaticResource HeaderBrush}">
                                    <Run Text="Ctrl+"/>
                                    <Run Text="{Binding KeyNumber}"/>
                                </TextBlock>
                                <TextBlock Text="{Binding Name}" 
                                           Foreground="{StaticResource ForegroundBrush}"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
            
            <!-- Macro Editor -->
            <Border Grid.Column="1" Background="{StaticResource SurfaceBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                    CornerRadius="5" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Key Display -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Keyboard Shortcut: " 
                                   Foreground="{StaticResource ForegroundDimBrush}" 
                                   VerticalAlignment="Center"/>
                        <Border Background="#40007ACC" CornerRadius="4" Padding="10,5">
                            <TextBlock FontWeight="Bold" Foreground="{StaticResource HeaderBrush}">
                                <Run Text="Ctrl+"/>
                                <Run x:Name="TxtKeyNumber" Text="1"/>
                            </TextBlock>
                        </Border>
                    </StackPanel>
                    
                    <!-- Macro Name -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,10">
                        <TextBlock Text="Macro Name:" 
                                   Foreground="{StaticResource ForegroundDimBrush}" 
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtMacroName" 
                                 Background="#FF1E1E1E"
                                 Foreground="{StaticResource ForegroundBrush}"
                                 BorderBrush="{StaticResource BorderBrush}"
                                 CaretBrush="White"
                                 Padding="8"
                                 FontSize="14"/>
                    </StackPanel>
                    
                    <!-- G-code Content Label -->
                    <TextBlock Grid.Row="2" Text="G-code Content:" 
                               Foreground="{StaticResource ForegroundDimBrush}" 
                               Margin="0,10,0,5"/>
                    
                    <!-- G-code Content -->
                    <TextBox x:Name="TxtGcodeContent" Grid.Row="3"
                             Background="#FF1E1E1E"
                             Foreground="{StaticResource ForegroundBrush}"
                             BorderBrush="{StaticResource BorderBrush}"
                             CaretBrush="White"
                             FontFamily="Consolas" FontSize="14"
                             AcceptsReturn="True" AcceptsTab="True"
                             VerticalScrollBarVisibility="Auto"
                             TextWrapping="NoWrap"
                             Padding="8"/>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Footer Buttons -->
        <Border Grid.Row="3" Background="{StaticResource SurfaceBrush}" Padding="15"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="?? Save" Click="BtnSave_Click" Margin="0,0,10,0"/>
                <Button Content="? Reset to Defaults" Click="BtnResetDefaults_Click" 
                        Background="#FFFF9800" Margin="0,0,10,0"/>
                <Button Content="Close" Click="BtnClose_Click" Background="#FF3E3E42"/>
            </StackPanel>
        </Border>
    </Grid>
    
    <Window.InputBindings>
        <KeyBinding Key="Escape" Command="ApplicationCommands.Close"/>
    </Window.InputBindings>
    
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Close" Executed="CloseCommand_Executed"/>
    </Window.CommandBindings>
</Window>
