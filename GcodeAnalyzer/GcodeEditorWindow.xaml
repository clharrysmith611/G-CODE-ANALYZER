<Window x:Class="GcodeAnalyzer.GcodeEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GcodeAnalyzer"
        mc:Ignorable="d"
        Title="G-code Editor" Height="550" Width="1050" MinHeight="400" MinWidth="700"
        WindowStartupLocation="CenterOwner"
        Background="#FF1E1E1E"
        Closing="Window_Closing">
    
    <Window.Resources>
        <!-- Dark theme colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FF1E1E1E"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FF2D2D30"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#FF3F3F46"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#FFE0E0E0"/>
        <SolidColorBrush x:Key="ForegroundDimBrush" Color="#FF9E9E9E"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF007ACC"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#FFFF4444"/>
        
        <!-- Menu Style -->
        <Style TargetType="Menu">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
        </Style>
        
        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="{StaticResource SurfaceBrush}">
            <MenuItem Header="_File" Foreground="{StaticResource ForegroundBrush}">
                <MenuItem Header="_Save" Click="MenuSave_Click" InputGestureText="Ctrl+S">
                    <MenuItem.Icon>
                        <TextBlock Text="??" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Save _As..." Click="MenuSaveAs_Click" InputGestureText="Ctrl+Shift+S">
                    <MenuItem.Icon>
                        <TextBlock Text="??" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Close" Click="MenuClose_Click" InputGestureText="Alt+F4"/>
            </MenuItem>
            <MenuItem Header="_Edit" Foreground="{StaticResource ForegroundBrush}">
                <MenuItem Header="_Undo" Command="ApplicationCommands.Undo" InputGestureText="Ctrl+Z">
                    <MenuItem.Icon>
                        <TextBlock Text="?" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Redo" Command="ApplicationCommands.Redo" InputGestureText="Ctrl+Y">
                    <MenuItem.Icon>
                        <TextBlock Text="?" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Cu_t" Command="ApplicationCommands.Cut" InputGestureText="Ctrl+X"/>
                <MenuItem Header="_Copy" Command="ApplicationCommands.Copy" InputGestureText="Ctrl+C"/>
                <MenuItem Header="_Paste" Command="ApplicationCommands.Paste" InputGestureText="Ctrl+V"/>
            </MenuItem>
            <MenuItem Header="_Select" Foreground="{StaticResource ForegroundBrush}">
                <MenuItem Header="Select _All" Command="ApplicationCommands.SelectAll" InputGestureText="Ctrl+A"/>
                <MenuItem Header="Select _None" Click="SelectNone_Click" InputGestureText="Ctrl+D"/>
                <MenuItem Header="_Invert Selection" Click="InvertSelection_Click" InputGestureText="Ctrl+I"/>
                <Separator/>
                <MenuItem Header="Select From _Simulator Position to Start" Click="SelectFromSimToStart_Click" InputGestureText="Ctrl+Shift+Home">
                    <MenuItem.Icon>
                        <TextBlock Text="?" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Select From Si_mulator Position to End" Click="SelectFromSimToEnd_Click" InputGestureText="Ctrl+Shift+End">
                    <MenuItem.Icon>
                        <TextBlock Text="?" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Set Selection _Start at Simulator Position" Click="SetSelectionStart_Click" InputGestureText="Ctrl+[">
                    <MenuItem.Icon>
                        <TextBlock Text="[" FontSize="14" FontWeight="Bold"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Set Selection _End at Simulator Position" Click="SetSelectionEnd_Click" InputGestureText="Ctrl+]">
                    <MenuItem.Icon>
                        <TextBlock Text="]" FontSize="14" FontWeight="Bold"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_View" Foreground="{StaticResource ForegroundBrush}">
                <MenuItem Header="_Show All Lines (Reset)" Click="MenuShowAll_Click" InputGestureText="Ctrl+Shift+A">
                    <MenuItem.Icon>
                        <TextBlock Text="??" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Hide Selected Lines" Click="MenuHideSelected_Click" InputGestureText="H"/>
                <MenuItem Header="Show _Only Selected Lines" Click="MenuShowOnlySelected_Click" InputGestureText="Shift+H"/>
                <MenuItem Header="_Add to Hidden" Click="MenuAddToHidden_Click"/>
                <MenuItem Header="_Unhide Selected Lines" Click="MenuUnhideSelected_Click"/>
                <Separator/>
                <MenuItem Header="Hide Line _Range..." Click="MenuHideRange_Click"/>
                <MenuItem Header="Show Only Line Ran_ge..." Click="MenuShowOnlyRange_Click"/>
                <Separator/>
                <MenuItem Header="Hide Ra_pid Moves (G0)" Click="MenuHideRapids_Click"/>
                <MenuItem Header="Show Only _Cutting Moves" Click="MenuShowOnlyCutting_Click"/>
                <Separator/>
                <MenuItem Header="In_vert Visibility" Click="MenuInvertVisibility_Click"/>
            </MenuItem>
            <MenuItem Header="_Tools" Foreground="{StaticResource ForegroundBrush}">
                <MenuItem Header="_Find and Replace..." Click="BtnFindReplace_Click" InputGestureText="Ctrl+F">
                    <MenuItem.Icon>
                        <TextBlock Text="??" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Z-Value Parameter Editor..." Click="BtnZValueEditor_Click" InputGestureText="Ctrl+Z">
                    <MenuItem.Icon>
                        <TextBlock Text="??" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Preview Changes" Click="BtnPreviewChanges_Click" InputGestureText="F6">
                    <MenuItem.Icon>
                        <TextBlock Text="??" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Unit Converter" Click="BtnUnitConverter_Click" InputGestureText="Ctrl+U">
                    <MenuItem.Icon>
                        <TextBlock Text="??" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Macros Editor" Click="BtnMacros_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="?" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Remove _G0 Lines..." Click="BtnRemoveG0Lines_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="?" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_G-code Help" Click="BtnHelp_Click" InputGestureText="F1">
                    <MenuItem.Icon>
                        <TextBlock Text="?" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
        
        <!-- Toolbar -->
        <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" Padding="5" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <Button Content="?? Save" Click="MenuSave_Click" Padding="10,5" Margin="0,0,5,0"
                        Background="{StaticResource AccentBrush}" Foreground="White" BorderThickness="0"/>
                <Button Content="?? Save As" Click="MenuSaveAs_Click" Padding="10,5" Margin="0,0,5,0"
                        Background="{StaticResource AccentBrush}" Foreground="White" BorderThickness="0"/>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0"/>
                <Button Content="?? Find &amp; Replace" Click="BtnFindReplace_Click" Padding="10,5" Margin="0,0,5,0"
                        Background="#FF2196F3" Foreground="White" BorderThickness="0"
                        ToolTip="Find and replace text (Ctrl+F)"/>
                <Button Content="?? Z-Value Editor" Click="BtnZValueEditor_Click" Padding="10,5" Margin="0,0,5,0"
                        Background="#FFFF5722" Foreground="White" BorderThickness="0"
                        ToolTip="Edit parameters for specific Z values (Ctrl+E)"/>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0"/>
                <Button x:Name="BtnPreviewChanges" Content="?? Preview Changes" Click="BtnPreviewChanges_Click" Padding="10,5" Margin="0,0,5,0"
                        Background="#FF4CAF50" Foreground="White" BorderThickness="0"
                        ToolTip="Update 2D/3D views without saving (F6)"/>
                <Button Content="?? Unit Converter" Click="BtnUnitConverter_Click" Padding="10,5" Margin="0,0,5,0"
                        Background="#FF9C27B0" Foreground="White" BorderThickness="0"
                        ToolTip="Convert inches to millimeters"/>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0"/>
                <Button Content="? Macros" Click="BtnMacros_Click" Padding="10,5" Margin="0,0,5,0"
                        Background="#FFFF9800" Foreground="White" BorderThickness="0"
                        ToolTip="Edit G-code macros (Ctrl+1 through Ctrl+0)"/>
                <Button Content="? G-code Help" Click="BtnHelp_Click" Padding="10,5"
                        Background="#FF9C27B0" Foreground="White" BorderThickness="0"
                        ToolTip="G-code &amp; GRBL Command Reference (F1)"/>
            </StackPanel>
        </Border>
        
        <!-- Editor Area with Line Numbers -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Line Numbers -->
            <Border Grid.Column="0" Background="#FF252526" BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="0,0,1,0" MinWidth="50">
                <ScrollViewer x:Name="LineNumberScroller" VerticalScrollBarVisibility="Hidden" 
                              HorizontalScrollBarVisibility="Hidden">
                    <ItemsControl x:Name="LineNumbersPanel" 
                                  FontFamily="Consolas" FontSize="14" 
                                  Padding="10,6,10,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Number}" 
                                           Foreground="{Binding Color}" 
                                           Background="{Binding Background}"
                                           TextAlignment="Right"
                                           Padding="0,0,5,0"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
            
            <!-- Text Editor -->
            <TextBox x:Name="EditorTextBox" Grid.Column="1"
                     Background="#FF1E1E1E"
                     Foreground="{StaticResource ForegroundBrush}"
                     CaretBrush="White"
                     FontFamily="Consolas" FontSize="14"
                     AcceptsReturn="True" AcceptsTab="True"
                     BorderThickness="0" Padding="5,6,5,0"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     TextWrapping="NoWrap"
                     UndoLimit="100"
                     IsUndoEnabled="True"
                     TextChanged="EditorTextBox_TextChanged"
                     SelectionChanged="EditorTextBox_SelectionChanged"
                     PreviewKeyDown="EditorTextBox_PreviewKeyDown"
                     ScrollViewer.ScrollChanged="EditorTextBox_ScrollChanged"/>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{StaticResource SurfaceBrush}" Padding="10,5"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="TxtFilePath" Grid.Column="0" 
                           Foreground="{StaticResource ForegroundDimBrush}" 
                           VerticalAlignment="Center"/>
                
                <TextBlock x:Name="TxtModified" Grid.Column="1" 
                           Text="" Foreground="#FFFFAA00" 
                           VerticalAlignment="Center" Margin="20,0"/>
                
                <TextBlock x:Name="TxtErrorCount" Grid.Column="2" 
                           Foreground="{StaticResource ErrorBrush}" 
                           VerticalAlignment="Center" Margin="20,0"/>
                
                <TextBlock x:Name="TxtLineInfo" Grid.Column="3" 
                           Foreground="{StaticResource ForegroundDimBrush}" 
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
    
    <!-- Keyboard Shortcuts -->
    <Window.InputBindings>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="ApplicationCommands.Save"/>
        <KeyBinding Key="S" Modifiers="Ctrl+Shift" Command="ApplicationCommands.SaveAs"/>
        <KeyBinding Key="F" Modifiers="Ctrl" Command="ApplicationCommands.Replace"/>
        <KeyBinding Key="H" Modifiers="Ctrl" Command="ApplicationCommands.Replace"/>
        <KeyBinding Key="E" Modifiers="Ctrl" Command="ApplicationCommands.Open"/>
        <KeyBinding Key="F6" Command="ApplicationCommands.Properties"/>
        <KeyBinding Key="F1" Command="ApplicationCommands.Help"/>
        <KeyBinding Key="U" Modifiers="Ctrl" Command="ApplicationCommands.Find"/>
        <KeyBinding Key="I" Modifiers="Ctrl" Command="ApplicationCommands.NotACommand"/>
        <KeyBinding Key="D" Modifiers="Ctrl" Command="ApplicationCommands.Delete"/>
        
        <!-- Macro shortcuts Ctrl+1 through Ctrl+9 and Ctrl+0 -->
        <KeyBinding Key="D1" Modifiers="Ctrl" Command="{x:Static local:MacroCommands.InsertMacro1}"/>
        <KeyBinding Key="D2" Modifiers="Ctrl" Command="{x:Static local:MacroCommands.InsertMacro2}"/>
        <KeyBinding Key="D3" Modifiers="Ctrl" Command="{x:Static local:MacroCommands.InsertMacro3}"/>
        <KeyBinding Key="D4" Modifiers="Ctrl" Command="{x:Static local:MacroCommands.InsertMacro4}"/>
        <KeyBinding Key="D5" Modifiers="Ctrl" Command="{x:Static local:MacroCommands.InsertMacro5}"/>
        <KeyBinding Key="D6" Modifiers="Ctrl" Command="{x:Static local:MacroCommands.InsertMacro6}"/>
        <KeyBinding Key="D7" Modifiers="Ctrl" Command="{x:Static local:MacroCommands.InsertMacro7}"/>
        <KeyBinding Key="D8" Modifiers="Ctrl" Command="{x:Static local:MacroCommands.InsertMacro8}"/>
        <KeyBinding Key="D9" Modifiers="Ctrl" Command="{x:Static local:MacroCommands.InsertMacro9}"/>
        <KeyBinding Key="D0" Modifiers="Ctrl" Command="{x:Static local:MacroCommands.InsertMacro0}"/>
    </Window.InputBindings>
    
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Save" Executed="SaveCommand_Executed"/>
        <CommandBinding Command="ApplicationCommands.SaveAs" Executed="SaveAsCommand_Executed"/>
        <CommandBinding Command="ApplicationCommands.Replace" Executed="FindReplaceCommand_Executed"/>
        <CommandBinding Command="ApplicationCommands.Open" Executed="ZValueEditorCommand_Executed"/>
        <CommandBinding Command="ApplicationCommands.Properties" Executed="PreviewChangesCommand_Executed"/>
        <CommandBinding Command="ApplicationCommands.Help" Executed="HelpCommand_Executed"/>
        <CommandBinding Command="ApplicationCommands.Find" Executed="UnitConverterCommand_Executed"/>
        <CommandBinding Command="ApplicationCommands.NotACommand" Executed="InvertSelectionCommand_Executed"/>
        <CommandBinding Command="ApplicationCommands.Delete" Executed="SelectNoneCommand_Executed"/>
        
        <!-- Standard Edit Commands for TextBox -->
        <CommandBinding Command="ApplicationCommands.Undo" 
                        CanExecute="EditCommand_CanExecute" 
                        Executed="EditCommand_Executed"/>
        <CommandBinding Command="ApplicationCommands.Redo" 
                        CanExecute="EditCommand_CanExecute" 
                        Executed="EditCommand_Executed"/>
        <CommandBinding Command="ApplicationCommands.Cut" 
                        CanExecute="EditCommand_CanExecute" 
                        Executed="EditCommand_Executed"/>
        <CommandBinding Command="ApplicationCommands.Copy" 
                        CanExecute="EditCommand_CanExecute" 
                        Executed="EditCommand_Executed"/>
        <CommandBinding Command="ApplicationCommands.Paste" 
                        CanExecute="EditCommand_CanExecute" 
                        Executed="EditCommand_Executed"/>
        <CommandBinding Command="ApplicationCommands.SelectAll" 
                        CanExecute="EditCommand_CanExecute" 
                        Executed="EditCommand_Executed"/>
        
        <!-- Macro command bindings -->
        <CommandBinding Command="{x:Static local:MacroCommands.InsertMacro1}" Executed="InsertMacro1_Executed"/>
        <CommandBinding Command="{x:Static local:MacroCommands.InsertMacro2}" Executed="InsertMacro2_Executed"/>
        <CommandBinding Command="{x:Static local:MacroCommands.InsertMacro3}" Executed="InsertMacro3_Executed"/>
        <CommandBinding Command="{x:Static local:MacroCommands.InsertMacro4}" Executed="InsertMacro4_Executed"/>
        <CommandBinding Command="{x:Static local:MacroCommands.InsertMacro5}" Executed="InsertMacro5_Executed"/>
        <CommandBinding Command="{x:Static local:MacroCommands.InsertMacro6}" Executed="InsertMacro6_Executed"/>
        <CommandBinding Command="{x:Static local:MacroCommands.InsertMacro7}" Executed="InsertMacro7_Executed"/>
        <CommandBinding Command="{x:Static local:MacroCommands.InsertMacro8}" Executed="InsertMacro8_Executed"/>
        <CommandBinding Command="{x:Static local:MacroCommands.InsertMacro9}" Executed="InsertMacro9_Executed"/>
        <CommandBinding Command="{x:Static local:MacroCommands.InsertMacro0}" Executed="InsertMacro0_Executed"/>
    </Window.CommandBindings>
</Window>
