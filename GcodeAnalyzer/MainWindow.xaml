<Window x:Class="GcodeAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GcodeAnalyzer"
        mc:Ignorable="d"
        Title="G-code Analyzer" Height="700" Width="1000" MinHeight="500" MinWidth="800"
        WindowState="Maximized"
        Background="#FF1E1E1E">
    
    <Window.Resources>
        <!-- Dark theme colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FF1E1E1E"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FF2D2D30"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#FF3F3F46"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#FFE0E0E0"/>
        <SolidColorBrush x:Key="ForegroundDimBrush" Color="#FF9E9E9E"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF007ACC"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#FFFF6B6B"/>
        
        <!-- GroupBox Style -->
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        </Style>
        
        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1C97EA"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- TextBlock Style -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
        </Style>
        
        <!-- CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
        </Style>
        
        <!-- ListBox Style -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        </Style>
        
        <!-- TabControl Style -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        </Style>
        
        <!-- TabItem Style -->
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="{StaticResource ForegroundDimBrush}"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" Background="{StaticResource SurfaceBrush}" 
                                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1,1,1,0"
                                Padding="10,5" Margin="0,0,2,0">
                            <ContentPresenter x:Name="ContentSite" ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF3E3E42"/>
                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF3E3E42"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ScrollViewer Style -->
        <Style TargetType="ScrollViewer">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="330" MinWidth="250"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Controls and Info -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- File Selection -->
            <GroupBox Grid.Row="0" Header="File Selection" Margin="0,0,0,10">
                <StackPanel Margin="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Help Button -->
                        <Button x:Name="BtnAppHelp" Grid.Column="0" 
                                Width="30" Height="30" Padding="0"
                                Background="#FFFFD700" 
                                ToolTip="Application Help"
                                Click="BtnAppHelp_Click" Margin="0,0,5,0">
                            <TextBlock Text="?" FontSize="18" FontWeight="Bold" 
                                       Foreground="#FFFF0000"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                        
                        <Button x:Name="BtnSelectFile" Grid.Column="1" 
                                Content="Select G-code File..." Height="30" 
                                Click="BtnSelectFile_Click"/>
                    </Grid>
                    <Button x:Name="BtnEditFile" Content="Edit / Create G-code File..." 
                            Height="30" Margin="0,5,0,0" Click="BtnEditFile_Click"/>
                    <TextBlock x:Name="TxtFileName" Text="No file selected" 
                               TextWrapping="Wrap" Margin="0,10,0,0" 
                               Foreground="{StaticResource ForegroundDimBrush}"/>
                </StackPanel>
            </GroupBox>

            <!-- Statistics -->
            <GroupBox Grid.Row="1" Header="Analysis Results" Margin="0,0,0,10" MinHeight="350">
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="400">
                    <TextBlock x:Name="TxtStatistics" Text="Load a file to see results." 
                               TextWrapping="Wrap" Margin="5" FontFamily="Consolas" FontSize="11"/>
                </ScrollViewer>
            </GroupBox>

            <!-- Settings -->
            <GroupBox Grid.Row="2" Header="Error Filters" Margin="0,0,0,10">
                <StackPanel Margin="5">
                    <CheckBox x:Name="ChkHideRedundantMoves" 
                              Content="Hide redundant move errors"
                              IsChecked="True"
                              Checked="ChkHideRedundantMoves_Changed"
                              Unchecked="ChkHideRedundantMoves_Changed"/>
                    <CheckBox x:Name="ChkHideDuplicatePaths" 
                              Content="Hide duplicate toolpath errors"
                              IsChecked="True"
                              Margin="0,5,0,0"
                              Checked="ChkHideDuplicatePaths_Changed"
                              Unchecked="ChkHideDuplicatePaths_Changed"/>
                </StackPanel>
            </GroupBox>

            <!-- Errors List -->
            <GroupBox Grid.Row="3" Header="Errors">
                <ListBox x:Name="LstErrors" Margin="5">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock TextWrapping="Wrap">
                                <Run Text="Line " Foreground="{StaticResource ForegroundDimBrush}"/>
                                <Run Text="{Binding LineNumber}" FontWeight="Bold"/>
                                <Run Text=": "/>
                                <Run Text="{Binding Message}" Foreground="{StaticResource ErrorBrush}"/>
                            </TextBlock>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </GroupBox>
        </Grid>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" 
                      VerticalAlignment="Stretch" Background="{StaticResource BorderBrush}"/>

        <!-- Right Panel - Toolpath Visualization with 2D/3D tabs -->
        <GroupBox Grid.Column="2" Header="Toolpath Visualization" Margin="5,0,0,0">
            <TabControl x:Name="ViewTabs" SelectionChanged="ViewTabs_SelectionChanged">
                <!-- 2D View Tab -->
                <TabItem Header="2D View">
                    <Grid Background="{StaticResource SurfaceBrush}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Legend and Controls -->
                        <Grid Grid.Row="0" Margin="5">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Rectangle Width="20" Height="3" Fill="Orange" Margin="0,0,5,0"/>
                                <TextBlock Text="Rapid (G0)" Margin="0,0,10,0"/>
                                <Rectangle Width="20" Height="3" Fill="DodgerBlue" Margin="0,0,5,0"/>
                                <TextBlock Text="Linear (G1)" Margin="0,0,10,0"/>
                                <Rectangle Width="20" Height="3" Fill="LimeGreen" Margin="0,0,5,0"/>
                                <TextBlock Text="Arc CW (G2)" Margin="0,0,10,0"/>
                                <Rectangle Width="20" Height="3" Fill="MediumPurple" Margin="0,0,5,0"/>
                                <TextBlock Text="Arc CCW (G3)"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="BtnReset2DView" Content="Reset View" 
                                        Padding="10,3" Margin="5,0"
                                        Click="BtnReset2DView_Click"/>
                            </StackPanel>
                        </Grid>

                        <!-- Canvas with transform support -->
                        <Border Grid.Row="1" x:Name="Canvas2DContainer" 
                                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="5"
                                Background="#FF252526" ClipToBounds="True"
                                MouseLeftButtonDown="Canvas2D_MouseLeftButtonDown"
                                MouseLeftButtonUp="Canvas2D_MouseLeftButtonUp"
                                MouseRightButtonDown="Canvas2D_MouseRightButtonDown"
                                MouseRightButtonUp="Canvas2D_MouseRightButtonUp"
                                MouseMove="Canvas2D_MouseMove"
                                MouseWheel="Canvas2D_MouseWheel">
                            <Canvas x:Name="ToolpathCanvas" Background="Transparent" 
                                    ClipToBounds="False">
                                <Canvas.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform x:Name="Canvas2DScale" ScaleX="1" ScaleY="1"/>
                                        <RotateTransform x:Name="Canvas2DRotate" Angle="0"/>
                                        <TranslateTransform x:Name="Canvas2DTranslate" X="0" Y="0"/>
                                    </TransformGroup>
                                </Canvas.RenderTransform>
                            </Canvas>
                        </Border>
                    </Grid>
                </TabItem>
                
                <!-- 3D View Tab -->
                <TabItem Header="3D View">
                    <local:Toolpath3DViewer x:Name="Viewer3D"/>
                </TabItem>
            </TabControl>
        </GroupBox>
    </Grid>
</Window>
