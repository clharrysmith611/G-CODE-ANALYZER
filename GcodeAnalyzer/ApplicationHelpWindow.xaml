<Window x:Class="GcodeAnalyzer.ApplicationHelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GcodeAnalyzer"
        mc:Ignorable="d"
        Title="G-code Analyzer - Application Help" Height="700" Width="900" MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterOwner">
    
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF1A1A2E" Offset="0"/>
            <GradientStop Color="#FF16213E" Offset="0.5"/>
            <GradientStop Color="#FF0F3460" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    
    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FF1E1E1E"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FF2D2D30"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#FF3F3F46"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#FFE0E0E0"/>
        <SolidColorBrush x:Key="ForegroundDimBrush" Color="#FF9E9E9E"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF007ACC"/>
        <SolidColorBrush x:Key="AccentLightBrush" Color="#FF3399FF"/>
        <SolidColorBrush x:Key="HeaderBrush" Color="#FF00D4FF"/>
        <SolidColorBrush x:Key="CommandBrush" Color="#FFFFD700"/>
        <SolidColorBrush x:Key="ParameterBrush" Color="#FF98FB98"/>
        <SolidColorBrush x:Key="ExampleBrush" Color="#FFFFB6C1"/>
        
        <Style TargetType="TreeView">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
        </Style>
        
        <Style TargetType="TreeViewItem">
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="2"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource HeaderBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1C97EA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#40000000" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="G-code Analyzer Help" 
                               FontSize="28" FontWeight="Bold" 
                               Foreground="{StaticResource HeaderBrush}"/>
                    <TextBlock Text="Complete guide to using the G-code Analyzer application" 
                               FontSize="14" Foreground="{StaticResource ForegroundDimBrush}" 
                               Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Search:" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"
                               Foreground="{StaticResource ForegroundDimBrush}"/>
                    <TextBox x:Name="TxtSearch" Width="250" 
                             Background="#40000000"
                             Foreground="{StaticResource ForegroundBrush}"
                             BorderBrush="{StaticResource BorderBrush}"
                             CaretBrush="White"
                             Padding="8,6"
                             FontSize="14"
                             TextChanged="TxtSearch_TextChanged"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Navigation Panel -->
            <Border Grid.Column="0" Background="#30000000" BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="0,0,1,0" Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TreeView x:Name="NavTree" SelectedItemChanged="NavTree_SelectedItemChanged">
                        <TreeViewItem Header="?? Welcome" Tag="Welcome" IsSelected="True"/>
                        <TreeViewItem Header="?? Getting Started" Tag="GettingStarted" IsExpanded="True">
                            <TreeViewItem Header="Loading Files" Tag="LoadingFiles"/>
                            <TreeViewItem Header="Creating New Files" Tag="CreatingFiles"/>
                            <TreeViewItem Header="Interface Overview" Tag="Interface"/>
                        </TreeViewItem>
                        <TreeViewItem Header="?? Analysis Features" Tag="Analysis" IsExpanded="True">
                            <TreeViewItem Header="Statistics Panel" Tag="Statistics"/>
                            <TreeViewItem Header="Error Detection" Tag="Errors"/>
                            <TreeViewItem Header="Error Filters" Tag="Filters"/>
                        </TreeViewItem>
                        <TreeViewItem Header="?? Visualization" Tag="Visualization" IsExpanded="True">
                            <TreeViewItem Header="2D View" Tag="View2D"/>
                            <TreeViewItem Header="3D View" Tag="View3D"/>
                            <TreeViewItem Header="Dimension Measurements" Tag="Dimensions"/>
                            <TreeViewItem Header="Toolpath Colors" Tag="Colors"/>
                        </TreeViewItem>
                        <TreeViewItem Header="?? Simulation" Tag="Simulation" IsExpanded="True">
                            <TreeViewItem Header="Playback Controls" Tag="Playback"/>
                            <TreeViewItem Header="Speed Control" Tag="Speed"/>
                            <TreeViewItem Header="Line Stepping" Tag="Stepping"/>
                        </TreeViewItem>
                        <TreeViewItem Header="?? G-code Editor" Tag="Editor" IsExpanded="True">
                            <TreeViewItem Header="Editor Overview" Tag="EditorOverview"/>
                            <TreeViewItem Header="Find and Replace" Tag="FindReplace"/>
                            <TreeViewItem Header="Unit Converter" Tag="UnitConverter"/>
                            <TreeViewItem Header="Error Highlighting" Tag="Highlighting"/>
                            <TreeViewItem Header="Preview Changes" Tag="Preview"/>
                            <TreeViewItem Header="Saving Files" Tag="Saving"/>
                        </TreeViewItem>
                        <TreeViewItem Header="?? Macros" Tag="Macros" IsExpanded="True">
                            <TreeViewItem Header="Using Macros" Tag="UsingMacros"/>
                            <TreeViewItem Header="Editing Macros" Tag="EditingMacros"/>
                            <TreeViewItem Header="Default Macros" Tag="DefaultMacros"/>
                        </TreeViewItem>
                        <TreeViewItem Header="?? Keyboard Shortcuts" Tag="Shortcuts"/>
                        <TreeViewItem Header="?? Tips &amp; Workflows" Tag="Tips" IsExpanded="True">
                            <TreeViewItem Header="Best Practices" Tag="BestPractices"/>
                            <TreeViewItem Header="Typical Workflow" Tag="Workflow"/>
                        </TreeViewItem>
                    </TreeView>
                </ScrollViewer>
            </Border>
            
            <!-- Content Panel -->
            <Border Grid.Column="1" Padding="20">
                <ScrollViewer x:Name="ContentScroller" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ContentPanel">
                        <!-- Content will be populated dynamically -->
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#40000000" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Previous Button -->
                <Button x:Name="BtnPrevious" Content="? Previous" Click="BtnPrevious_Click" 
                        Grid.Column="0" Margin="0,0,10,0"
                        ToolTip="Go to previous article"/>
                
                <!-- Center Info -->
                <TextBlock Grid.Column="1" Text="Press Escape to close | Use ? ? buttons to navigate" 
                           Foreground="{StaticResource ForegroundDimBrush}" 
                           VerticalAlignment="Center" TextAlignment="Center"/>
                
                <!-- Next and Close Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="BtnNext" Content="Next ?" Click="BtnNext_Click" 
                            Margin="0,0,10,0"
                            ToolTip="Go to next article"/>
                    <Button Content="Close" Click="BtnClose_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
    
    <Window.InputBindings>
        <KeyBinding Key="Escape" Command="ApplicationCommands.Close"/>
    </Window.InputBindings>
    
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Close" Executed="CloseCommand_Executed"/>
    </Window.CommandBindings>
</Window>
