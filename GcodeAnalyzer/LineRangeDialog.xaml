<Window x:Class="GcodeAnalyzer.LineRangeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Line Range"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="#FF2D2D30"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="Padding" Value="5,3"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF007ACC"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    
    <StackPanel Margin="20">
        <TextBlock x:Name="TxtPrompt" Text="Enter the range of lines:" 
                   Margin="0,0,0,15" FontSize="13"/>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="Start Line:" 
                       VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="TxtStartLine" Grid.Column="1" 
                     Width="80" Text="1"/>
            
            <TextBlock Grid.Column="2" Text="End Line:" 
                       VerticalAlignment="Center" Margin="20,0,10,0"/>
            <TextBox x:Name="TxtEndLine" Grid.Column="3" 
                     Width="80" Text="100"/>
        </Grid>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" IsCancel="True" Margin="0,0,10,0"
                    Background="#FF3E3E42"/>
            <Button Content="OK" IsDefault="True" Click="BtnOK_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
