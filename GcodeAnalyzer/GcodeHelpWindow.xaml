<Window x:Class="GcodeAnalyzer.GcodeHelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GcodeAnalyzer"

        mc:Ignorable="d"
        Title="G-code &amp; GRBL Command Reference" Height="700" Width="900" MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterOwner">
    
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF1A1A2E" Offset="0"/>
            <GradientStop Color="#FF16213E" Offset="0.5"/>
            <GradientStop Color="#FF0F3460" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    
    <Window.Resources>
        <!-- Dark theme colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FF1E1E1E"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FF2D2D30"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#FF3F3F46"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#FFE0E0E0"/>
        <SolidColorBrush x:Key="ForegroundDimBrush" Color="#FF9E9E9E"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF007ACC"/>
        <SolidColorBrush x:Key="AccentLightBrush" Color="#FF3399FF"/>
        <SolidColorBrush x:Key="HeaderBrush" Color="#FF00D4FF"/>
        <SolidColorBrush x:Key="CommandBrush" Color="#FFFFD700"/>
        <SolidColorBrush x:Key="ParameterBrush" Color="#FF98FB98"/>
        <SolidColorBrush x:Key="ExampleBrush" Color="#FFFFB6C1"/>
        
        <!-- TreeView Styles -->
        <Style TargetType="TreeView">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
        </Style>
        
        <Style TargetType="TreeViewItem">
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="2"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource HeaderBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1C97EA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header with Search -->
        <Border Grid.Row="0" Background="#40000000" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="G-code &amp; GRBL Command Reference" 
                               FontSize="28" FontWeight="Bold" 
                               Foreground="{StaticResource HeaderBrush}"/>
                    <TextBlock Text="Complete reference guide for CNC programming" 
                               FontSize="14" Foreground="{StaticResource ForegroundDimBrush}" 
                               Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Search:" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"
                               Foreground="{StaticResource ForegroundDimBrush}"/>
                    <TextBox x:Name="TxtSearch" Width="250" 
                             Background="#40000000"
                             Foreground="{StaticResource ForegroundBrush}"
                             BorderBrush="{StaticResource BorderBrush}"
                             CaretBrush="White"
                             Padding="8,6"
                             FontSize="14"
                             TextChanged="TxtSearch_TextChanged"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Navigation Panel -->
            <Border Grid.Column="0" Background="#30000000" BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="0,0,1,0" Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TreeView x:Name="NavTree" SelectedItemChanged="NavTree_SelectedItemChanged">
                        <TreeViewItem Header="[*] Overview" Tag="Overview" IsSelected="True"/>
                        <TreeViewItem Header="[>] Motion Commands" Tag="Motion" IsExpanded="True">
                            <TreeViewItem Header="G0 - Rapid Move" Tag="G0"/>
                            <TreeViewItem Header="G1 - Linear Move" Tag="G1"/>
                            <TreeViewItem Header="G2 - Arc CW" Tag="G2"/>
                            <TreeViewItem Header="G3 - Arc CCW" Tag="G3"/>
                            <TreeViewItem Header="G4 - Dwell" Tag="G4"/>
                        </TreeViewItem>
                        <TreeViewItem Header="[#] Coordinate System" Tag="Coordinates" IsExpanded="True">
                            <TreeViewItem Header="G17-G19 - Plane Select" Tag="G17"/>
                            <TreeViewItem Header="G20/G21 - Units" Tag="G20"/>
                            <TreeViewItem Header="G28 - Home" Tag="G28"/>
                            <TreeViewItem Header="G53 - Machine Coords" Tag="G53"/>
                            <TreeViewItem Header="G54-G59 - Work Coords" Tag="G54"/>
                            <TreeViewItem Header="G90/G91 - Abs/Rel" Tag="G90"/>
                            <TreeViewItem Header="G92 - Set Position" Tag="G92"/>
                        </TreeViewItem>
                        <TreeViewItem Header="[S] Spindle &amp; Tool" Tag="Spindle" IsExpanded="True">
                            <TreeViewItem Header="M3/M4 - Spindle On" Tag="M3"/>
                            <TreeViewItem Header="M5 - Spindle Off" Tag="M5"/>
                            <TreeViewItem Header="M6 - Tool Change" Tag="M6"/>
                            <TreeViewItem Header="S - Spindle Speed" Tag="S"/>
                            <TreeViewItem Header="T - Tool Select" Tag="T"/>
                        </TreeViewItem>
                        <TreeViewItem Header="[C] Coolant" Tag="Coolant">
                            <TreeViewItem Header="M7 - Mist Coolant" Tag="M7"/>
                            <TreeViewItem Header="M8 - Flood Coolant" Tag="M8"/>
                            <TreeViewItem Header="M9 - Coolant Off" Tag="M9"/>
                        </TreeViewItem>
                        <TreeViewItem Header="[P] Program Control" Tag="Program">
                            <TreeViewItem Header="M0/M1 - Pause" Tag="M0"/>
                            <TreeViewItem Header="M2/M30 - End" Tag="M2"/>
                        </TreeViewItem>
                        <TreeViewItem Header="[$] GRBL Commands" Tag="GRBL" IsExpanded="True">
                            <TreeViewItem Header="$$ - View Settings" Tag="$$"/>
                            <TreeViewItem Header="$# - View Offsets" Tag="$#"/>
                            <TreeViewItem Header="$G - Parser State" Tag="$G"/>
                            <TreeViewItem Header="$H - Homing" Tag="$H"/>
                            <TreeViewItem Header="$X - Unlock" Tag="$X"/>
                            <TreeViewItem Header="$J - Jog" Tag="$J"/>
                            <TreeViewItem Header="! - Feed Hold" Tag="!"/>
                            <TreeViewItem Header="~ - Cycle Start" Tag="~"/>
                            <TreeViewItem Header="? - Status Report" Tag="?"/>
                        </TreeViewItem>
                        <TreeViewItem Header="[=] Parameters" Tag="Parameters">
                            <TreeViewItem Header="F - Feed Rate" Tag="F"/>
                            <TreeViewItem Header="X/Y/Z - Coordinates" Tag="XYZ"/>
                            <TreeViewItem Header="I/J/K - Arc Center" Tag="IJK"/>
                            <TreeViewItem Header="R - Arc Radius" Tag="R"/>
                            <TreeViewItem Header="P - Dwell Time" Tag="P"/>
                            <TreeViewItem Header="N - Line Number" Tag="N"/>
                        </TreeViewItem>
                    </TreeView>
                </ScrollViewer>
            </Border>
            
            <!-- Content Panel -->
            <Border Grid.Column="1" Padding="20">
                <ScrollViewer x:Name="ContentScroller" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ContentPanel">
                        <!-- Content will be populated dynamically -->
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#40000000" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Previous Button -->
                <Button x:Name="BtnPrevious" Content="? Previous" Click="BtnPrevious_Click" 
                        Grid.Column="0" Margin="0,0,10,0"
                        ToolTip="Go to previous command"/>
                
                <!-- Center Info -->
                <TextBlock Grid.Column="1" Text="Press F1 or Escape to close | Use ? ? buttons to navigate" 
                           Foreground="{StaticResource ForegroundDimBrush}" 
                           VerticalAlignment="Center" TextAlignment="Center"/>
                
                <!-- Next and Close Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="BtnNext" Content="Next ?" Click="BtnNext_Click" 
                            Margin="0,0,10,0"
                            ToolTip="Go to next command"/>
                    <Button Content="Close" Click="BtnClose_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
    
    <Window.InputBindings>
        <KeyBinding Key="Escape" Command="ApplicationCommands.Close"/>
        <KeyBinding Key="F1" Command="ApplicationCommands.Close"/>
    </Window.InputBindings>
    
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Close" Executed="CloseCommand_Executed"/>
    </Window.CommandBindings>
</Window>
